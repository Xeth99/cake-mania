<%- include('../includes/admin-header.ejs') %>

<%- include('../includes/admin-sidebar.ejs') %>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    

<div class="container-fluid pt-4 px-4">
  <div class="bg-secondary text-center rounded p-4">
      <div class="d-flex align-items-center justify-content-between mb-4">
          <h6 class="mb-0">Categories</h6>
          <a href="">Show All Categories</a>
      </div>
      <div class="table-responsive">
          <table class="table text-start align-middle table-bordered table-hover mb-0">
              <thead>
                  <tr class="text-white">
                      <th scope="col"><input class="form-check-input" type="checkbox"></th>
                      
                      <th class="col-auto" scope="col">Image</th>
                      <th scope="col">Name</th>
                      <th scope="col">Category ID</th>
                      <th scope="col">Edit</th>
                      <th scope="col">Delete</th>
                  </tr>
              </thead>
              <tbody>

                <% categories.forEach(category => { %>
                    <tr>
                        <td><input class="form-check-input" type="checkbox"></td>
                        <td><img src="<%= category.categoryImage%>" class="img-fluid w-50 h-20"></td>
                        <td><%= category.categoryName%></td>
                        <td><%= category.categoryID%></td>
                        
                        <td><a class="btn btn-sm btn-warning" href="/cakemania.ng/admin/categories/edit-cat/<%= category.categoryID%>">Edit</a></td>
                      <td><a class="btn btn-sm btn-danger" href="">Delete</a></td>
                    </tr>
                    <% }); %>

              </tbody>
          </table>
      </div>
  </div>
</div>
<!-- Recent Sales End -->
  </main>
</div>
</div>


