<%- include('../includes/admin-header.ejs') %>
<%- include('../includes/admin-navbar.ejs') %>
<%- include('../includes/admin-sidebar.ejs') %>


<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Dashboard</h1>
     
    </div>

    <div class="container pt-4 px-4">
      <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-xl-12">
              <form action="/cakemania.ng/admin/categories/edit-cat/<%=category.categoryID%>?_method=PUT" method="post"> 

                  <div class="cake-container rounded h-100 p-4">
                      <h3 class="mb-4">Edit Category</h3>

                      <div class="mb-3">
                        <label for="categoryName" class="form-label">Category Name</label>
                          <input type="text" placeholder="Enter category name" class="form-control" id="categoryName" name="categoryName" value="<%= category.categoryName%>">
                      </div>
  
                      <div class="mb-3">
                        <label for="categoryImage" class="form-label">Image URL</label>
                          <input type="text" placeholder="Enter image url" class="form-control" id="categoryImage" name="categoryImage" value="<%= category.categoryImage%>">
                      </div>

  
                      <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
              </form>
          </div>
      </div>
  </div>
  

  </main>
</div>
</div>


<%- include('../includes/admin-footer.ejs') %>