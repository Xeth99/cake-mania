<div class="container">
    <div class="row text-center">
        <div class="col-xs-12 col-sm-12 col-md-12 categories"> 
            <h2 class="category-desc">Popular Categories</h2> 
        </div>

        <% if (allCategories && allCategories.length > 0) { %>
            <% allCategories.forEach(category => { %>
                <div class="col-xs-12 col-sm-12 col-md-4 card-content">
                    <div class="card category-card rounded-3">
                        <a href="/cakemania.ng/cakes/category/<%=category.categoryID%>">
                            <img src="/data/uploads/<%= category.categoryImage %>" width="200" height="200" class="card-img-top img-fluid rounded-3" alt="Images of the cake categories">
                        </a>
                        <div class="card-body">
                            <p class="card-text"><%= category.categoryName %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No categories available.</p>
        <% } %>


        
    </div>
