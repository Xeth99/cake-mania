<%- include('./includes/header.ejs') %>

<%- include('./includes/navbar.ejs') %>

<div class="signup-container">
    <div class="bkground-img">
        <form action="/cakemania.ng/users/signup" method="post">
            <h2>Sign Up</h2>

            <% if (message) { %>
                <div class="error-message"><%= message %></div>
            <% } %>

            <% if (successMessage) { %>
                <div class="success-message"><%=successMessage%> <a href="/cakemania.ng/users/login">here</a></div>
            <% } %>

            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required>

            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <label for="password">Confirm Password:</label>
            <input type="password" id="passwordConfirm" name="passwordConfirm" required>

            <label for="phoneNo">Phone Number:</label>
            <input type="tel" id="phoneNo" name="phoneNo" required>

            <button type="submit">Sign Up</button>
        </form>
    </div>
</div>

<%- include('./includes/footer.ejs') %>
