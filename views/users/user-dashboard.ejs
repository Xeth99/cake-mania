
<%- include('../includes/header.ejs') %>

<%- include('../includes/navbar.ejs') %>
 

 
 <!-- Your page content goes here -->
 <div class="container mt-5 mb-5">
    <div class="row">


        <!--Beginning of user sidebar summary-->
        <div class="col-md-3 user-sidebar rounded-3"> <!-- col-md-3 to align to the right cart summary and checkout button -->
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="text-center"></h1>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 cart-div">
                       
                        <div>
                            <a href="/cakemania.ng/users/profile">
                                <p><i class="bi bi-pencil"></i> &nbsp; &nbsp; My Cakemania Account </p>
                            </a>
                            
                            <a href="/cakemania.ng/users/profile/orders">
                                <p><i class="bi bi-cart"></i> &nbsp; &nbsp; Orders </p><hr>
                            </a>
    
                            <p class="mb-2 mt-4 pe-5 text-decoration"> <i class="bi bi-box-arrow-right"></i> &nbsp; &nbsp; LOGOUT </p> 
                          
                        </div>      
                        
                    </div>
                </div>
            </div>
        </div> <!-- End of user sidebar -->


        <div class="col-md-9 "> <!-- col-md-9 address  align to the right -->
            <div class="container user-account-contents rounded-3">
                <div class="row">
                    <% user.forEach((user) => { %>
                    <div class="col-sm-12 col-md-12 mb-3 mt-3"> <h3> Account Overview </h3> </div> <hr>
                       
                        <div class="address-box d-flex align-items-center">  
                            <div class="col-sm-12 col-md-6  mt-4 mb-4 summary-1 rounded-3">
                                <h4> ACCOUNT DETAILS </h4> <hr>
                                <p><%= user.firstName%> <%= user.lastName%> </p>
                                <p><%= user.email%></p>
                                <p>+<%= user.phoneNo%></p>
                            </div>
    
                            <div class="col-sm-12 col-md-6 mt-4 mb-4 summary-2  rounded-3">
                                <h4> ADDRESS BOOK 
                                    <span class="float-end">
                                        <a href="/cakemania.ng/users/profile/edit/<%=user.userID%>">
                                            <i class="bi bi-pencil"></i> 
                                        </a>  
                                    </span>
                                </h4> <hr>
                                <p> Your default shipping address</p>
                                <p><%= user.firstName%> <%= user.lastName%> </p>
                                <p>Orchid Rd, Lekki, Penusila || 101601, Lagos, state  </p>
                                <p>LEKKI -VGC Lagos</p>
                                <p>+<%= user.phoneNo%></p>
                            </div>
                        </div>
                        

                        
                    </div> 
                    <% }); %>
                 
                    
                </div><!--end row-->    
            </div>
                    
        </div>
              

</div>
        </div> <!--End div class col-md-9 right align container --> 

        
    </div>
</div> <!-- End of main-cart-contents div -->

